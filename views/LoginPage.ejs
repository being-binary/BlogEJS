<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/src/css/signUpLogin.css">
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <nav>
        <div class="nav px-[10vw]">
            <h2 class=' text-[30px]'>Blog</h2>
            <ul class="nav-menu">
                <li><a href="#">About</a></li>
                <li id="formToggle"><a href="#">Sign UP</a></li>
            </ul>
            <i class="bi bi-list menu text-[35px]"></i>
        </div>
    </nav>
    <div class="body">
        <div class="left"></div>
        <div class="right">
            <div class="login w-full h-full flex justify-center items-center">
                <form action="">
                    <p id="error"></p>
                    <label for="email"><span>Email <sup>*</sup></span><span id="emailerror"></span></label>
                    <input type="email" name="email" id="email" onchange="loginUpdate(event)"
                        placeholder="abc@gmail.com">
                    <label for="password"><span>Password <sup>*</sup></span><span id="passworderror"></span></label>
                    <input type="password" name="password" id="password" onchange="loginUpdate(event)"
                        placeholder="*********">
                    <input type="submit" value="submit" onclick="loginForm(event)">
                </form>
            </div>
            <div class="signup w-full h-full flex justify-center items-center none">
                <form action=" " id="signupformid">
                    <p id="serror"></p>
                    <div class="name">
                        <div class="fname"><label for="fname"><span>First Name <sup>*</sup></span><span
                                    id="sfnameerror"></span></label>
                            <input type="text" id="fname" name="fname" onchange="signUpUpdate(event)"
                                placeholder="John">
                        </div>
                        <div class="lname">
                            <label for="lname"><span>Second Name <sup>*</sup></span><span
                                    id="slnameerror"></span></label>
                            <input type="text" id="lname" name="lname" onchange="signUpUpdate(event)"
                                placeholder="Wick">
                        </div>
                    </div>
                    <label for="email"><span>Email <sup>*</sup></span><span id="semailerror"></span></label>
                    <input type="email" name="email" id="email" onchange="signUpUpdate(event)"
                        placeholder="abc@gmail.com">
                    <label for="password"><span>Password <sup>*</sup></span><span id="spassworderror"></span></label>
                    <input type="password" name="password" id="password" onchange="signUpUpdate(event)"
                    placeholder="*********">
                    <input type="submit" value="submit" onclick="signUpForm(event)">
                </form>
            </div>
        </div>
    </div>
    <script src="/src/js/login.js"></script>
    <!-- <script src="src/js/signUp.js"></script> -->
    <script src="/src/js/nav.js"></script>
</body>

</html>