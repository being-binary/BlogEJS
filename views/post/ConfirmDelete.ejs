<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title><link rel="icon" type="image/png" sizes="32x32" href="../src/Images/icon.png">
    <link href="/css/tailwind.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>

<body>
    <%- include('../Navbar'); %>
        <div class="container m-auto px-30 grid lg:grid-cols-3 grid-cols-1 py-[70px]">
            <div class="post col-span-2 rounded-sm">
                <div class="flex flex-col shadow-md p-3 mt-1 mb-2">
                    <div class="">
                        <p class="text-4xl font-semibold font-sans text-red-500">Do you want to delete the post?</p>
                    </div>
                    <div>
                        <input type="submit" onclick="redirect(event)" value="No"
                            class="mt-4 cursor-pointer text-white font-bold text-xl bg-green-400 px-4 py-3 w-min uppercase rounded-md shadow-lg shadow-green-500/50">
                        <button data-pid="<%= pid %>" id="deleteButton"
                            class="mt-4 cursor-pointer text-white font-bold text-xl bg-red-400 px-4 py-3 w-min uppercase rounded-md shadow-lg shadow-red-500/50">Yes</button>
                    </div>
                </div>
            </div>
            <%- include('../Sidebar'); %>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const deleteButton = document.getElementById('deleteButton');
                if (deleteButton) {
                    deleteButton.addEventListener('click', function (event) {
                        const pid = this.dataset.pid;
                        deleteAction(event, pid);
                    });
                }
            });
        </script>
        <script src="/src/js/loader/loader.js"></script>
        <script src="/src/js/toastify/toast.js"></script>
        <script src="/src/js/post/post.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</body>

</html>